<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>text:</strong>
  <%= @article.text %>
</p>
<h2>Comment List</h2>
<table class="table">
<% @article.comments.each do |comment| %>
    <tr>
      <td><%= comment.commenter %></td>
      <td><%= comment.body %></td>
      <td><%= link_to 'delete', [comment.article,comment],method: :delete,data: {confirm:'are you sure?'} %></td>
    </tr>
<% end %>
</table>
<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
    <div class="form-horizontal">
      <div class="form-group">
        <div class="col-sm-2"> <%= f.label :commenter %></div>
        <div class="col-sm-10"><%= f.text_field :commenter %></div>
      </div>
      <div class="form-group">
        <div class="col-sm-2"> <%= f.label :body %><br></div>
        <div class="col-sm-10"><%= f.text_area :body %></div>
      </div>
      <p>
        <%= f.submit %>
      </p>
    </div>
    <div class="text-left">
      <%= link_to 'edit', edit_article_path(@article) %>
      <%= link_to 'list', articles_url %>
    </div>
<% end %>

